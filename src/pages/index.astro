<!-- Script para manejar la autenticaci칩n del lado del cliente -->
<script>
  // Actualizar el estado al cargar la p치gina
  window.addEventListener('load', () => {
    const token = localStorage.getItem('token');
    if (token) {
      window.location.href = '/dashboard'; // Redirigir si est치 autenticado
    }
  });
</script>