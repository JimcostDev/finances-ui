---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';

const title = "Página no encontrada";
const description = "Lo sentimos, no podemos encontrar la página que estás buscando.";
const suggestion = "Verifica la URL o regresa a la página principal.";
---
<Layout title="404 - MyFinances">
  <main class="flex flex-col items-center justify-center min-h-screen py-20">
    <h1 class="text-5xl font-bold text-gray-800 mb-4">404</h1>
    <h2 class="text-2xl font-semibold text-gray-700 mb-2">{title}</h2>
    <p class="text-lg text-gray-600 mb-6">{description}</p>
    <p class="text-md text-gray-500 mb-8">{suggestion}</p>
    <a 
      href="/dashboard"
      class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200"
    >
      Volver a la página principal
    </a>
  </main>
</Layout>
