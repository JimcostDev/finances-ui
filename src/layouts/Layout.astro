---
const { title } = Astro.props;
import { ClientRouter } from 'astro:transitions';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-md p-4 fixed top-0 left-0 right-0 flex items-center justify-center z-50">
      <a href="/dashboard" class="flex items-center gap-2">
        <img src="./src/assets/astro.svg" alt="Logo" class="h-10 w-auto" />
        <span class="hidden sm:inline-block text-xl font-bold text-gray-800">MyFinances</span>
      </a>
    </header>
    <main class="pt-10 pb-5">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
